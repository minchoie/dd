import java.util.Scanner;

public class PhoneBookApp {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        PhoneBook phoneBook = new PhoneBook();

        while (true) {
            System.out.println("Choose an option: [1] Add Contact [2] Remove Contact [3] Find Contact [4] Show All [5] Exit");
            String option = scanner.nextLine();

            switch (option) {
                case "1":
                    System.out.print("Enter name: ");
                    String name = scanner.nextLine();
                    System.out.print("Enter phone number: ");
                    String phoneNumber = scanner.nextLine();
                    phoneBook.addContact(new Contact(name, phoneNumber));
                    break;
                case "2":
                    System.out.print("Enter name to remove: ");
                    name = scanner.nextLine();
                    phoneBook.removeContact(name);
                    break;
                case "3":
                    System.out.print("Enter name to find: ");
                    name = scanner.nextLine();
                    Contact contact = phoneBook.getContact(name);
                    if (contact != null) {
                        System.out.println("Found: " + contact);
                    } else {
                        System.out.println("Contact not found.");
                    }
                    break;
                case "4":
                    System.out.println("All Contacts:");
                    for (Contact c : phoneBook.getAllContacts()) {
                        System.out.println(c);
                    }
                    break;
                case "5":
                    System.out.println("Exiting...");
                    scanner.close();
                    return;
                default:
                    System.out.println("Invalid option. Please choose again.");
                    break;
            }
        }
    }
}
